/*Reset*/

html {
    color: #333;
    font-size: 100%;
    overflow-y: scroll;
    -webkit-overflow-scrolling: touch;
    -webkit-tap-highlight-color: rgba(0,0,0,0);
    -webkit-text-size-adjust: 100%;
    -ms-text-size-adjust: 100%;
}
body {
    margin: 0;
    font-size: 14px;
}

/* ---Default elements---
   ================================================== */
a {
    margin: 0;
    padding: 0;
    font-size: 100%;
    vertical-align: baseline;
    text-decoration: none;
}
a:hover,
a:focus {
    outline: none
}
a img {
    border: none
}
img {
    vertical-align: middle;
    -ms-interpolation-mode: bicubic;
}
b,
strong {
    font-weight: 500
}
p {
    line-height: 1.2em;
    margin: 12px 0;
}
hr {
    display: block;
    height: 1px;
    border: 0;
    border-top: 1px solid #e5e5e5;
    margin: 1em 0;
    padding: 0;
}
h1,
h2,
h3,
h4,
h5,
h6 {
    margin: 12px 0;
    font-weight: 300;
}
/* ===[ Tables ]=== */
table {
    border-collapse: collapse;
    border-spacing: 0;
}
table.full-table {
    width: 100%
}
td,
td img {
    vertical-align: top
}
/* ===[ Forms ]=== */
form {
    margin: 0
}
textarea {
    overflow: auto;
    vertical-align: top;
    resize: false;
}
fieldset {
    border: 0;
    margin: 0;
    padding: 0;
}
legend {
    border: 0;
    margin-left: -7px;
    padding: 0;
}
input[type="checkbox"],
input[type="radio"] {
    box-sizing: border-box
}
input[type="search"] {
    -moz-box-sizing: content-box;
    -webkit-box-sizing: content-box;
    box-sizing: content-box;
}
button,
input[type="button"],
input[type="reset"],
input[type="submit"] {
    cursor: pointer;
    -webkit-appearance: button;
}
button,
input {
    line-height: normal;
    overflow: visible;
}
input[type="text"],
input[type="password"],
textarea,
select {
    position: relative;
}
button::-moz-focus-inner,
input::-moz-focus-inner {
    border: 0;
    padding: 0;
}
button {
    width: auto;
    overflow: visible;
}
button,
input,
select,
textarea {
    font-size: 100%;
    margin: 0;
    vertical-align: baseline;
    vertical-align: middle;
    outline: none;
    outline: none;
}
/* ===[ Placeholders ]=== */
.placeholder {
    color: #6d6d6d;
    font-weight: 300;
}
::-webkit-input-placeholder {
    color: #6d6d6d;
    font-weight: 300;
}
:-moz-placeholder {
    color: #6d6d6d;
    font-weight: 300;
}
::-moz-placeholder {
    color: #6d6d6d;
    font-weight: 300;
    opacity: 1;
}
:-ms-input-placeholder {
    color: #6d6d6d;
    font-weight: 300;
}